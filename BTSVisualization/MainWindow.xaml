<Window x:Class="BTSVisualization.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BTSVisualization"
        mc:Ignorable="d"
        Title="Бинарное дерево поиска" Height="750" Width="1000" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Header="Добавление узла">
            <StackPanel>
                <TextBlock Text="Введите число для узла дерева" Margin="2" />
                <TextBox Margin="2" Width="70" HorizontalAlignment="Left" Text="{Binding CurrentNode.NodeValue}"/>
                <Button Content="Добавить" Margin="2" Width="70" HorizontalAlignment="Left" Command="{Binding AddNodeCommand}" CommandParameter="{Binding CurrentNode}"/>
                <Button Content="Очистить дерево" Margin="2" HorizontalAlignment="Left"/>
            </StackPanel>
        </GroupBox>

        <local:BinaryTreeView Grid.Column="1" BinaryTreeData="{Binding BinaryTreeEnvelope}"></local:BinaryTreeView>
    </Grid>
</Window>
