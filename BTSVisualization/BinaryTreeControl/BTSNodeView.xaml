<UserControl x:Class="BTSVisualization.BTSNodeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BTSVisualization.BinaryTreeControl"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">

    <Viewbox>
        <Grid Width="20" Height="20">
            <Ellipse Stroke="Black" Fill="LightGray" StrokeThickness="0.5"/>
            <TextBlock HorizontalAlignment="Center" Text="{Binding}" TextAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Viewbox>
</UserControl>
